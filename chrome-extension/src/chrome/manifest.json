{
  "name": "Tatchup",
  "version": "1.10",
  "description": "Write over youtube videos.",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },

  "permissions": ["activeTab", "declarativeContent", "storage", "http://tatchup.herokuapp.com/", "https://tatchup.herokuapp.com/"],

  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/app-icon-16.png",
      "32": "assets/images/app-icon-32.png",
      "48": "assets/images/app-icon-48.png",
      "128": "assets/images/app-icon-128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "beacon.js"
      ],
      "run_at": "document_start"
    },

    {
      "matches": ["<all_urls>"],
      "js": [
        "page.js"
      ],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "assets/images/app-icon-16.png",
    "32": "assets/images/app-icon-32.png",
    "48": "assets/images/app-icon-48.png",
    "128": "assets/images/app-icon-128.png"
  },

  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "manifest_version": 2
}
